<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>coding</filter-name>
        <filter-class>Filters.CodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>coding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>userAdd</servlet-name>
        <servlet-class>UserServic.UserAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userAdd</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userLogin</servlet-name>
        <servlet-class>UserServic.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddType</servlet-name>
        <servlet-class>GoodsServic.AddType</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddType</servlet-name>
        <url-pattern>/addType</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TypeList</servlet-name>
        <servlet-class>GoodsServic.TypeList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TypeList</servlet-name>
        <url-pattern>/typeList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addGoods</servlet-name>
        <servlet-class>GoodsServic.AddGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGoods</servlet-name>
        <url-pattern>/addGoods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>goodsList</servlet-name>
        <servlet-class>GoodsServic.GoodsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>goodsList</servlet-name>
        <url-pattern>/goodsList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allToShow</servlet-name>
        <servlet-class>GoodsServic.AddToShop</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allToShow</servlet-name>
        <url-pattern>/allToShow</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodsCout</servlet-name>
        <servlet-class>GoodsServic.SeleGoodsCount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsCout</servlet-name>
        <url-pattern>/goodsCount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>seleGoods</servlet-name>
        <servlet-class>GoodsServic.seleGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>seleGoods</servlet-name>
        <url-pattern>/seleGoods</url-pattern>
    </servlet-mapping>
</web-app>